<configuration>
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>LCTT.ToolKit.log</file>
    <append>false</append>
    <immediateFlush>true</immediateFlush>
    <encoder>
      <pattern>%-30(%d{MMM dd YYYY HH:mm:ss.SSS} [%thread]) %-5level %logger{5} [%file:%line] - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="CONSOLE_INFO_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>INFO</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <encoder>
      <pattern>%msg%n</pattern>
      <charset>utf8</charset>
    </encoder>
  </appender>

  <appender name="CONSOLE_ERROR_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>ERROR</level>
    </filter>
    <encoder>
      <pattern>%-7([%level]) %msg%n</pattern>
      <charset>utf8</charset>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="FILE" />
    <appender-ref ref="CONSOLE_INFO_APPENDER" />
    <appender-ref ref="CONSOLE_ERROR_APPENDER" />
  </root>
</configuration>
